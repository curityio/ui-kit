{
  "name": "curity-ui-kit",
  "version": "1.0.0",
  "description": "Monorepo for Self Service Portal, Login Web App, Template System, and Styles",
  "author": "Curity AB",
  "private": true,
  "license": "Apache-2.0",
  "workspaces": [
    "src/common/assets",
    "src/common/components",
    "src/common/css",
    "src/common/icons",
    "src/identity-server",
    "src/self-service-portal/app",
    "src/login-web-app"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:identity-server\" \"npm run start:ussp\" \"sleep 3 && open index.html\"",
    "start:ussp": "npm run start --workspace=src/self-service-portal/app",
    "start:lwa": "npm run start --workspace=src/login-web-app/app",
    "start:identity-server": "npm run start --workspace=src/identity-server",
    "build:identity-server": "npm run build --workspace=src/identity-server",
    "build:ussp": "npm run build --workspace=src/self-service-portal/app",
    "build:lwa": "npm run build --workspace=src/login-web-app/app",
    "build:css": "npm run build --workspace=src/common/css",
    "build:icons": "npm run build --workspace=src/common/icons",
    "build:all": "npm run build -ws"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
