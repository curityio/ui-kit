{
  "name": "curity-ui-kit",
  "version": "1.0.0",
  "description": "Monorepo for Curity Identity Server Templates, Self Service Portal, Curity CSS, Curity UI Icons React, and Curity React Component Library.",
  "author": "Curity AB",
  "private": true,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/curityio/ui-kit.git"
  },
  "bugs": {
    "url": "https://github.com/curityio/ui-kit/issues"
  },
  "workspaces": [
    "src/common/assets",
    "src/common/component-library",
    "src/common/css",
    "src/common/css/lib",
    "src/common/css/docs",
    "src/common/icons",
    "src/identity-server",
    "src/self-service-portal/app"
  ],
  "scripts": {
    "start": "concurrently \"npm run start:identity-server\" \"npm run start:ssp\" \"npm run start:css\" \"npm run start:component-library\" \"open index.html\"",
    "start:ssp": "npm run -w src/self-service-portal/app start",
    "start:css": "npm run -w src/common/css start",
    "start:component-library": "npm run -w src/common/component-library start",
    "start:identity-server": "npm run -w src/identity-server start",
    "build:identity-server": "npm run -w src/identity-server build",
    "build:ssp": "npm run -w src/self-service-portal/app build",
    "build:css": "npm run -w src/common/css build",
    "build:component-library": "npm run -w src/common/component-library build",
    "build:icons": "npm run -w src/common/icons build",
    "build": "npm run build -ws --if-present",
    "clean": "npm run clean -ws --if-present"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
