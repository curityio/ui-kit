{
  "name": "@curity-ui-kit/self-service-portal",
  "version": "0.0.0-SNAPSHOT-1",
  "type": "module",
  "scripts": {
    "start": "vite --open",
    "build": "tsc -b && vite build",
    "tsBuild": "tsc -b",
    "tsBuild:watch": "tsc -b -w",
    "lint": "eslint ..",
    "lint:watch": "npx onchange '**/*.ts?(x)' -- npm run lint",
    "preview": "vite preview",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "e2e": "cypress run --headless --browser chrome --e2e",
    "generate-graphql-typings-queries-and-mutations": "graphql-codegen --config graphql-codegen-config.ts --verbose",
    "preinstall": "cp ./git/hooks/* .git/hooks/ || true",
    "setup-idsvr": "./setup-idsvr.sh"
  },
  "publishConfig": {
    "registry": "https://hub.curityio.net/repository/curity-npm-registry/"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@apollo/client": "^3.12.3",
    "@curity/token-handler-js-assistant": "^1.2.2",
    "@github/webauthn-json": "^2.1.1",
    "@reach/dialog": "^0.18.0",
    "graphql": "^16.10.0",
    "i18next": "^24.2.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^5.0.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.4.1",
    "react-qr-code": "^2.0.15",
    "react-router": "^7.0.2",
    "react-verification-input": "^4.2.2",
    "@curity-ui-kit/curity-css": "1.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@graphql-codegen/cli": "5.0.3",
    "@graphql-codegen/client-preset": "4.5.1",
    "@parcel/watcher": "^2.5.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-basic-ssl": "^2.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "cypress": "^13.16.1",
    "eslint": "^9.16.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "globals": "^15.13.0",
    "jsdom": "^25.0.1",
    "stylelint-config-standard": "^36.0.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  }
}
